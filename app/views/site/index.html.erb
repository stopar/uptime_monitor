<h1>PING</h1>

<% if @domains.present? %>
<table class="table table-striped table-light">
  <thead>
    <tr>
      <th>Domain</th>
      <th>Most recent ping</th>
      <th>Response time</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @domains.each do |domain| %>
      <% ping = domain.pings.last %>
      <%= render partial: "pings/ping", locals: { ping: ping, domain: domain } %>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>Please select or add a domain to monitor.</p>
<% end %>
